@model IEnumerable<SehirProje.Models.populations>

@{
    ViewBag.Title = "Nüfus Kayıtları";
}

<h2>Nüfus Dağılımları</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.count)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.count)
        </td>
        <td class="align-middle text-center">
            <div class="d-flex justify-content-center gap-2 flex-wrap">
                <a href="@Url.Action("Edit", new { id = item.Id })"
                   class="btn btn-sm btn-primary text-white text-decoration-none"
                   style="max-width: 150px;">Düzenle</a>

                <a href="@Url.Action("Details", new { id = item.Id })"
                   class="btn btn-sm btn-success text-white text-decoration-none"
                   style="max-width: 150px;">İncele</a>

                <a href="@Url.Action("Delete", new { id = item.Id })"
                   class="btn btn-sm btn-danger text-white text-decoration-none"
                   style="max-width: 150px;">Sil</a>
            </div>
        </td>

    </tr>
}

</table>
