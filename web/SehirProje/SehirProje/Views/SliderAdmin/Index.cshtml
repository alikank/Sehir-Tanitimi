@model IEnumerable<SehirProje.Models.slider_images>

@{
    ViewBag.Title = "Slider Admin";
}

<h2>Slider Listesi</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.image_url)

        </th>
        <th>
            Resim Önizlemesi

        </th>
        <th>
            @Html.DisplayNameFor(model => model.image_text)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.image_url)
            </td>
            <td>
                <img src="@item.image_url" height="100" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.image_text)
            </td>
            <td class="align-middle text-center">
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-primary mb-2 w-100 text-white text-decoration-none">Düzenle</a>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-success mb-2 w-100 text-white text-decoration-none">İncele</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger w-100 text-white text-decoration-none">Sil</a>
            </td>


        </tr>
    }

</table>
